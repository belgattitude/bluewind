{
  "name": "@bluewind/api-nestjs-experiment",
  "version": "0.0.1",
  "description": "Classroom appplication backend",
  "author": "Vanvelthem SÃ©bastien",
  "license": "AGPL-3.0",
  "private":true,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "clean": "rimraf --no-glob dist",
    "typecheck": "tsc -p . --noEmit",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:fix": "tslint -p tsconfig.json -c tslint.json --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config test/e2e/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate",
    "migration:run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run",
    "migration:revert": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert",
    "graphql:generate-typings": "ts-node -r tsconfig-paths/register ./src/generate-typings.ts"
  },
  "dependencies": {
    "@nestjs/common": "^6.11.7",
    "@nestjs/core": "^6.11.7",
    "@nestjs/graphql": "^6.5.4",
    "@nestjs/passport": "^6.1.1",
    "@nestjs/platform-express": "^6.11.7",
    "@nestjs/swagger": "^4.",
    "@nestjs/typeorm": "^6.3.1",
    "@sindresorhus/is": "^2.1.0",
    "apollo-server-express": "^2.10.1",
    "class-validator": "^0.11.0",
    "envalid": "^6.0.1",
    "graphql": "^14.6.0",
    "graphql-tools": "^4.0.6",
    "helmet": "^3.21.2",
    "mysql2": "^2.1.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.4",
    "swagger-ui-express": "^4.1.3",
    "type-graphql": "^0.17.6",
    "typeorm": "^0.2.22",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.11.7",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/faker": "^4.1.9",
    "@types/helmet": "0.0.45",
    "@types/jest": "^25.1.2",
    "@types/node": "^13.7.2",
    "@types/sqlite3": "^3.1.6",
    "@types/supertest": "^2.0.8",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.0",
    "faker": "^4.1.0",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "sqlite3": "^4.1.1",
    "supertest": "^4.0.2",
    "testdouble": "^3.12.5",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "3.9.0",
    "tslint": "^6.0.0",
    "typescript": "3.7.5",
    "utility-types": "^3.10.0",
    "wait-on": "^4.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.jest.json"
      }
    }
  },
  "engines": {
    "node": ">=10.15.0",
    "yarn": ">=1.13.0"
  },
  "devEngines": {
    "npm": ">=5.x",
    "yarn": ">=1.13.0"
  }
}
