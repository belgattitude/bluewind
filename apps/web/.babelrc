{
    "presets": [
        [
            "@babel/preset-env",
            {
                "useBuiltIns": "usage",
                "corejs": 3,
                "debug": false
            }
        ],
        "@babel/react"
    ],
    "env": {
        "production": {
            "plugins": [
                "emotion"
            ]
        },
        "development": {
            "presets": [
                [
                    "@babel/preset-env",
                    {
                        "useBuiltIns": false
                    }
                ]
            ],
            "plugins": [
                [
                    "emotion",
                    {
                        "sourceMap": true
                    }
                ],
                "react-hot-loader/babel"
            ]
        },
        "test": {
            "presets": [
                [
                    "@babel/preset-env",
                    {
                        "debug": true,
                        "useBuiltIns": false,
                        "modules": "commonjs",
                        "targets": {
                            "browsers": [
                                "chrome >= 57"
                            ],
                            "node": 10
                        }
                    }
                ]
            ],
            "plugins": [
                "@babel/plugin-transform-modules-commonjs"
            ]
        }
    },
    "plugins": [
        "@babel/plugin-syntax-dynamic-import",
        "@babel/plugin-syntax-import-meta",
        "@babel/plugin-proposal-class-properties",
        "@babel/plugin-proposal-json-strings",
        "@babel/plugin-proposal-object-rest-spread"
    ]
}
