{
  "name": "@bluewind/api",
  "version": "0.0.1",
  "description": "Classroom appplication backend",
  "author": "Vanvelthem SÃ©bastien",
  "license": "AGPL-3.0",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:dev2": "concurrently --handle-input \"wait-on dist/src/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "clean": "rimraf dist",
    "tsc": "tsc -p . --noEmit",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config test/e2e/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate",
    "migration:run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run",
    "migration:revert": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert",
    "graphql:generate-typings": "ts-node -r tsconfig-paths/register ./src/generate-typings.ts"
  },
  "dependencies": {
    "@nestjs/common": "^6.5.0",
    "@nestjs/core": "^6.5.0",
    "@nestjs/graphql": "^6.2.4",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.5.0",
    "@nestjs/swagger": "^3.0.2",
    "@nestjs/typeorm": "^6.1.2",
    "apollo-server-express": "^2.6.7",
    "class-validator": "^0.9.1",
    "envalid": "^5.0.0",
    "graphql": "^14.4.2",
    "graphql-tools": "^4.0.5",
    "helmet": "^3.18.0",
    "mysql2": "^1.6.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.2",
    "swagger-ui-express": "^4.0.7",
    "type-graphql": "^0.17.4",
    "typeorm": "^0.2.18",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.5.0",
    "@types/cors": "^2.8.5",
    "@types/express": "^4.17.0",
    "@types/faker": "^4.1.5",
    "@types/graphql": "^14.2.2",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.1",
    "@types/supertest": "^2.0.8",
    "concurrently": "^4.1.1",
    "cross-env": "^5.2.0",
    "faker": "^4.1.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "sqlite3": "^4.0.9",
    "supertest": "^4.0.2",
    "testdouble": "^3.12.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3",
    "wait-on": "^3.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.jest.json"
      }
    }
  },
  "engines": {
    "node": ">=10.15.0",
    "yarn": ">=1.13.0"
  },
  "devEngines": {
    "npm": ">=5.x",
    "yarn": ">=1.13.0"
  }
}
