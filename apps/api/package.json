{
    "name": "@bluewind/api",
    "version": "0.0.1",
    "description": "Classroom appplication backend",
    "author": "Vanvelthem SÃ©bastien",
    "license": "AGPL-3.0",
    "private": true,
    "scripts": {
        "db:install": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:sync",
        "db:seed-example-data": "ts-node -r tsconfig-paths/register ./scripts/db-seed-example-data.ts",
        "start:dev": "concurrently --handle-input \"wait-on dist/app.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
        "start:debug": "nodemon --config nodemon-debug.json",
        "clean": "rimraf dist",
        "typecheck": "tsc -p . --noEmit",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "lint:fix": "tslint -p tsconfig.json -c tslint.json --fix",
        "fix": "npm run format && npm run lint",
        "test": "jest",
        "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
    },
    "dependencies": {
        "@sindresorhus/is": "^1.0.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "class-transformer": "^0.2.3",
        "class-validator": "^0.10.0",
        "cors": "^2.8.5",
        "envalid": "^5.0.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "mysql2": "^1.7.0",
        "reflect-metadata": "^0.1.13",
        "swagger-ui-express": "^4.0.7",
        "ts-money": "^0.4.6",
        "typeorm": "^0.2.18",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/body-parser": "^1.17.1",
        "@types/cors": "^2.8.6",
        "@types/express": "^4.17.1",
        "@types/jest": "^24.0.18",
        "@types/jsonwebtoken": "^8.3.3",
        "@types/node": "^12.7.5",
        "@types/sqlite3": "^3.1.5",
        "@types/swagger-ui-express": "^3.0.1",
        "concurrently": "^4.1.2",
        "cross-env": "^6.0.0",
        "jest": "^24.9.0",
        "nodemon": "^1.19.2",
        "prettier": "^1.18.2",
        "rimraf": "^3.0.0",
        "sqlite3": "^4.1.0",
        "ts-jest": "^24.0.2",
        "ts-node": "^8.3.0",
        "tsconfig-paths": "3.8.0",
        "tslint": "^5.20.0",
        "typescript": "^3.6.3",
        "utility-types": "^3.7.0",
        "wait-on": "^3.3.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(ts|js|tsx)$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "setupFilesAfterEnv": ["./test/jest.setup.ts"],
        "testEnvironment": "node",
        "globals": {
            "ts-jest": {
                "tsConfig": "./tsconfig.jest.json"
            }
        }
    },
    "engines": {
        "node": ">=10.15.0"
    }
}
