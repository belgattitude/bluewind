{
    "name": "bluewind-api",
    "version": "0.0.1",
    "description": "Classroom application backend",
    "author": "Vanvelthem SÃ©bastien",
    "license": "AGPL-3.0",
    "private": true,
    "scripts": {
        "db:install": "ts-node -r tsconfig-paths/register ./scripts/typeorm.cli.ts schema:sync",
        "db:seed-demo": "ts-node -r tsconfig-paths/register ./scripts/db-seed-demo.ts",
        "start:dev": "concurrently --handle-input \"wait-on dist/server.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
        "start:debug": "nodemon --config nodemon-debug.json",
        "clean": "rimraf --no-glob dist",
        "typecheck": "tsc -p . --noEmit",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint . --ext .ts,.tsx",
        "lint:fix": "eslint . --ext .ts,.tsx --fix",
        "fix": "npm run format && npm run lint",
        "test": "jest -c jest.unit.config.js && jest -c jest.integration.config.js",
        "test:coverage": "jest -c jest.unit.config.js --coverage",
        "test:unit": "jest -c jest.unit.config.js",
        "test:integration": "jest -c jest.integration.config.js",
        "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
        "precommit": "lint-staged",
        "coverage:publish": "codecov --root=../../ -F apps"
    },
    "lint-staged": {
        "*.{json,css,scss}": [
            "prettier --write",
            "git add"
        ],
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "git add"
        ]
    },
    "dependencies": {
        "@bluewind/error-flow": "*",
        "@sindresorhus/is": "^1.2.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "class-transformer": "^0.2.3",
        "class-validator": "^0.11.0",
        "cookie-parser": "^1.4.4",
        "cors": "^2.8.5",
        "envalid": "^6.0.0",
        "express": "^4.17.1",
        "faker": "^4.1.0",
        "jsonwebtoken": "^8.5.1",
        "mysql2": "^2.1.0",
        "reflect-metadata": "^0.1.13",
        "swagger-ui-express": "^4.1.3",
        "ts-money": "^0.4.6",
        "tsyringe": "^4.0.1",
        "typeorm": "^0.2.22",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/body-parser": "^1.17.1",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.6",
        "@types/express": "^4.17.2",
        "@types/faker": "^4.1.9",
        "@types/jest": "^24.9.1",
        "@types/jsonwebtoken": "^8.3.7",
        "@types/node": "^13.5.0",
        "@types/sqlite3": "^3.1.6",
        "@types/swagger-ui-express": "^4.1.1",
        "@typescript-eslint/eslint-plugin": "^2.17.0",
        "@typescript-eslint/parser": "2.17.0",
        "concurrently": "^5.0.2",
        "cross-env": "^6.0.3",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.9.0",
        "eslint-loader": "3.0.3",
        "eslint-plugin-import": "2.20.0",
        "eslint-plugin-jest": "^23.6.0",
        "eslint-plugin-jest-formatting": "^1.2.0",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-sonarjs": "^0.5.0",
        "jest": "^25.1.0",
        "nodemon": "^2.0.2",
        "prettier": "^1.19.1",
        "rimraf": "^3.0.0",
        "sqlite3": "^4.1.1",
        "ts-jest": "^25.0.0",
        "ts-node": "^8.6.2",
        "tsconfig-paths": "3.9.0",
        "typescript": "3.7.5",
        "utility-types": "^3.10.0",
        "wait-on": "^4.0.0"
    },
    "engines": {
        "node": ">=10.15.0"
    }
}
